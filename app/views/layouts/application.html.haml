%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title Iceberg
    = include_gon
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container-fluid
      %center
        %nav{class: "navbar navbar-default"}
          .container-fluid
            .navbar-header
              %a{class: "navbar-brand", href: "#"}
                Iceberg
            %div{class: "collapse navbar-collapse",
              id: "%%bs-example-navbar-collapse-1"}
              %ul{class: "nav navbar-nav"}
                = render 'devise/menu/home_item'
                = render 'devise/menu/registration_items'
                = render 'devise/menu/my_profile_path'
                = render 'devise/menu/message_items'
                = render 'devise/menu/creation_items'
                = render 'devise/menu/login_items'
        - flash.each do |name, msg|
          = content_tag :div, msg, class: name
        = yield
  %footer{ class: "footer" }
    .container-fluid
      %div{class: "title"} Just the tip
      %img{class: "image"}(src="https://d13yacurqjgara.cloudfront.net/users/62801/screenshots/1343041/iceberg_1x.jpg")